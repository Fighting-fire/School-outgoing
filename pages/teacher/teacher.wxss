.grid { display: -webkit-box; display: box; }  
.col-0 {-webkit-box-flex:0;box-flex:0;}  
.col-1 {-webkit-box-flex:1;box-flex:1;}  
.fl { float: left;}  
.fr { float: right;}
.hint {
  z-index: 999;
  width: 100%;
  border-radius: 20px 20px 0 0;
  background-color: white;
  position: -webkit-sticky; /* Safari */
